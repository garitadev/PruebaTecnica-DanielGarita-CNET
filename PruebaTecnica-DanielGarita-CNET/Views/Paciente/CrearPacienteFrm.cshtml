@model PruebaTecnica_DanielGarita_CNET.Entities.PacienteObj

@{
    ViewBag.Title = "Crear";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3 bg-primary">
        <h6 class="m-0 font-weight-bold text-white">Registro de pacientes</h6>
    </div>
    <div class="card-body">

        @using (Html.BeginForm("CrearPaciente", "Paciente", FormMethod.Post))
        {
            <!--metodo-->
            <div class="row">
                <!--para las filas-->
                <!--se crea la columna-->
                <div class="col-6">
                    <div class="form-group">
                        @Html.Label("nombre", "Nombre del paciente")
                        @Html.TextBoxFor(Model => Model.nombre, new { @class = "form-control", @required = "required", @placeholder = "Nombre" })

                        @Html.ValidationMessageFor(Model => Model.nombre, null, new { @class = "text-danger" })

                    </div>

                    <br />
                </div>


                <div class="col-6">
                    <div class="form-group">
                        @Html.Label("direccion", "Apellido")
                        @Html.TextBoxFor(Model => Model.apellido, new { @class = "form-control", @required = "required", @placeholder = "Dirección" })
                        @Html.ValidationMessageFor(Model => Model.apellido, null, new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-4">
                    <div class="form-group">
                        @Html.Label("telefono", "Telefono Personal")
                        @Html.TextBoxFor(Model => Model.numeroPersonal, new { @class = "form-control", @type = "number", @required = "number", @placeholder = "8888-8888", maxlength = "8" })
                        @Html.ValidationMessageFor(Model => Model.numeroPersonal, null, new { @class = "text-danger" })
                    </div>
                </div>

                <div class="col-4">
                    <div class="form-group">
                        @Html.Label("email", "Número Emergencia")
                        @Html.TextBoxFor(Model => Model.numeroEmergencia, new { @class = "form-control", @type = "number", @placeholder = "8888-8888" })
                        @Html.ValidationMessageFor(Model => Model.numeroEmergencia, null, new { @class = "text-danger" })

                        <br />
                    </div>
                </div>


            </div>

            <div class="row">
                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Registrar Paciente</button>
                </div>
            </div>
        }


        <!-- DataTales Example -->
    </div>
</div>

